@model SAEP.Revisao.MVC.Dominios.RegistroDefeito

@{
    ViewData["Title"] = "Create";
}

<h2>Registrar Defeito</h2>
<hr />
<div class="container">
    <div class="row col-md-4">
        <div class="center-block">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DataRegistro" class="control-label"></label>
                    <input asp-for="DataRegistro" class="form-control" />
                    <span asp-validation-for="DataRegistro" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdTipoEquipamento" class="control-label"></label>
                    <select asp-for="IdTipoEquipamento" class="form-control" asp-items="ViewBag.IdTipoEquipamento"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdDefeito" class="control-label"></label>
                    <select asp-for="IdDefeito" class="form-control" asp-items="ViewBag.IdDefeito"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <textarea asp-for="Descricao" style="resize:none" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Criar" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
