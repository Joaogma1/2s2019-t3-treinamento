@model SAEP.Revisao.MVC.Dominios.Usuario

@{
    Layout = "~/Views/Shared/_login.cshtml";
    ViewData["Title"] = "Create";
}
<div class="container">
    <img class="center-block img-responsive" alt="logo empresa" src="~/images/logo.png" />
    <form class="form-signin" asp-action="Create">

        <h2 class="form-signin-heading text-center">Login</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (ViewBag.Mensagem != null)
        {
            <div class="alert alert-danger" role="alert">
                @Html.Raw(ViewBag.Mensagem)
            </div>
        }
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input required asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Senha" class="control-label"></label>
            <input required asp-for="Senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class=" text-center form-group">
            <input type="submit" value="Entrar" class="btn text-uppercase" style="background-color:#0085C7;color:#FFF" />
        </div>

    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
